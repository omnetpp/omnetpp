define hook-run
    skipstdcxxheaders
end
define hook-start
    skipstdcxxheaders
end
define hook-stop
    skipstdcxxheaders
end
define hook-attach
    skipstdcxxheaders
end

define skipstdcxxheaders
python
global skippedstdcxxheaders
if skippedstdcxxheaders == False:
    skipAllIn('/usr/include/c++')
    print('Standard C++ headers skipped during stepping')
skippedstdcxxheaders = True
end
end

maint set worker-threads unlimited
set index-cache on
