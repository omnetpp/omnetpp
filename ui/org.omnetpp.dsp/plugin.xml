<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            id="org.omnetpp.dsp.hiddenSimulationLaunchConfigurationType"
            public="false"
            delegateName="OMNeT++ Simulation Non-interactive Launches"
            delegateDescription="Launch an OMNeT++ simulation non-interactively using debug server protocol"
            name="OMNeT++ Simulation - hidden"
            sourceLocatorId="org.eclipse.lsp4e.debug.sourceLocator"
            sourcePathComputerId="org.eclipse.lsp4e.debug.sourcePathComputer">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class=""
            id="org.omnetpp.dsp.launchConfigurationTabGroup1"
            type="org.omnetpp.dsp.hiddenSimulationLaunchConfigurationType">
            <launchMode mode="debug" perspective="org.eclipse.debug.ui.DebugPerspective"/>
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchDelegates">
      <launchDelegate
            delegate="org.omnetpp.dsp.launch.NonInteractiveDSPLaunchDelegate"
            delegateDescription="Allows debugging an OMNeT++ simulation with the LLDB-DAP debugger without UI"
            id="org.omnetpp.dsp.nonInteractiveDSPLaunchDelegate"
            modes="run,debug"
            name="OMNeT++ Simulation LLDB-DAP Debugger started non-interactively"
            sourceLocatorId="org.eclipse.lsp4e.debug.sourceLocator"
            sourcePathComputerId="org.eclipse.lsp4e.debug.sourcePathComputer"
            type="org.omnetpp.dsp.hiddenSimulationLaunchConfigurationType">
      </launchDelegate>
      <launchDelegate
            delegate="org.omnetpp.dsp.launch.SimulationDSPLaunchDelegate"
            delegateDescription="Allows debugging an OMNeT++ simulation with the LLDB-DAP debugger"
            id="org.omnetpp.launch.simulationDSPDelegate"
            modes="debug"
            name="OMNeT++ Simulation LLDB-DAP Debugger"
            sourceLocatorId="org.eclipse.lsp4e.debug.sourceLocator"
            sourcePathComputerId="org.eclipse.lsp4e.debug.sourcePathComputer"
            type="org.omnetpp.launch.simulationLaunchConfigurationType">
      </launchDelegate>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabs">
      <tab
            class="org.eclipse.debug.ui.sourcelookup.SourceLookupTab"
            group="org.omnetpp.launch.simulationLaunchConfigurationTabGroup"
            id="org.omnetpp.cdt.csourcetab"
            name="Source">
         <placement
               after="org.eclipse.debug.ui.environmentTab">
         </placement>
         <associatedDelegate
               delegate="org.omnetpp.launch.simulationDSPDelegate">
         </associatedDelegate>
      </tab>
      <tab
            class="org.omnetpp.dsp.launch.SimulationDSPMainTab"
            group="org.omnetpp.launch.simulationLaunchConfigurationTabGroup"
            id="org.omnetpp.cdt.dspdebugtab"
            name="Debugger">
         <placement
               after="org.eclipse.debug.ui.environmentTab">
         </placement>
         <associatedDelegate
               delegate="org.omnetpp.launch.simulationDSPDelegate">
         </associatedDelegate>
      </tab>
   </extension>
   <extension
         point="org.eclipse.urischeme.uriSchemeHandlers">
      <uriSchemeHandler
            class="org.omnetpp.dsp.DSPUriSchemeHandler"
            uriScheme="omnetpp"
            uriSchemeDescription="OMNeT++ DSP specific URI handler">
      </uriSchemeHandler>
   </extension>
</plugin>
