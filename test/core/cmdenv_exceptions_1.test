%description:
Tests that errors in activity() are properly caught and displayed in Cmdenv,
and finish() doesn't get called.

%module: {Module}

class {Module} : public cSimpleModule
{
    Module_Class_Members({Module},cSimpleModule,32768)
    virtual void activity();
    virtual void finish();
};

Define_Module({Module});

void {Module}::activity()
{
    throw new cException("test exception");
}

void {Module}::finish()
{
    ev << "finish called\n";
}

%exitcode: 1

%contains-regex: stdout
Error in module .*: test exception

%not-contains: stdout
finish called


