%description:
test saveToFile()/loadFromFile() for cLongHistogram

%activity:

cLongHistogram h;

h.setNumCells(10);   // 10 cells
h.setRangeAuto(2,1); // range set up after 2 observations, no range extension

h.collect(10);
h.collect(19);

h.collect(9);
h.collect(10);
h.collect(12);
h.collect(12);
h.collect(20);

// save it
FILE *f=fopen("{}_h.dat","w");
h.saveToFile(f);
fclose(f);

// load it back to another histogram, then save again so that we can verify
// if it was correctly loaded
cLongHistogram h2;

FILE *f2=fopen("{}_h.dat","r");
h2.loadFromFile(f2);
fclose(f2);

FILE *f3=fopen("{}_h2.dat","w");
h2.saveToFile(f3);
fclose(f3);

