#
# Global definitions
#
!include ..\..\configuser.vc

!if "$(LIB_SUFFIX)"==".dll"
CFLAGS=$(CFLAGS) -DWIN32_DLL
!endif

#
# Local definitions
#
COPTS=$(CFLAGS) -I. -I../../src/common -I../../include/platdep -I../../src/scave \
      /Fd"vectorfilereadertest.pdb"

OBJS= main.obj vectorfilereadertest.obj resultfilemanagertest.obj \
      vectorfileindexertest.obj
      
LIBS= ../../lib/$(TOOLCHAIN_NAME)/common$(D).lib ../../lib/$(TOOLCHAIN_NAME)/scave$(D).lib

#
# Automatic rules
#
.SUFFIXES : .cc

.cc.obj:
	$(CXX) /Fo"$@" $(COPTS) /c /Tp $<

#
# Targets (TBD: build dll)
#
all: test.exe

test.exe: $(OBJS) $(LIBS)
	$(LINK) $(LDFLAGS) /nologo /out:test.exe $(OBJS) $(LIBS)

depend:
	$(MAKEDEPEND) -I. -fMakefile.vc -- *.cc

clean:
	- del *.obj 2> nul
	- del *.ilk *.idb *.pdb *.lib *.exe 2> nul


