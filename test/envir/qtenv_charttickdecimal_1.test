T(ChartTickDecimal(123456789, 50).ceil(-30));
T(ChartTickDecimal(123456789, 50).floor(-30));


T(ChartTickDecimal(123456789, 50).ceil(45));
T(ChartTickDecimal(123456789, 50).floor(45));

T(ChartTickDecimal(123456789, 50).ceil(-45));
T(ChartTickDecimal(123456789, 50).floor(-45));



