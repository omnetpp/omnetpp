#define TCTOR(x) (EV << #x << " --> " << str2(ChartTickDecimal(x)) << std::endl)
#define TCTOR2(m, e) (EV << #m << ", " << #e << " --> " << str2(ChartTickDecimal(m, e)) << std::endl)
#define TB(x) (EV << #x << " " << x << std::endl)

EV << "\n";


EV << "Construction from double:\n";

TCTOR(0.0);
TCTOR(-0.0);

TCTOR(1.0);
TCTOR(-1.0);

TCTOR(0.001);
TCTOR(-0.001);

TCTOR(100.0);
TCTOR(-100.0);

TCTOR(1.0e10);
