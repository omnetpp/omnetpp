T(n100.over5());
T(n100.over10());


EV << "Floor and ceil:\n";

ChartTickDecimal minuspi(-31415, -4);

T(pi.floor(2));
T(pi.ceil(2));

T(pi.floor(0));
T(pi.ceil(0));

T(pi.floor(-2));
T(pi.ceil(-2));

T(pi.floor(30));
T(pi.ceil(30));

T(pi.floor(-30));
T(pi.ceil(-30));


T(minuspi.floor(2));
T(minuspi.ceil(2));

T(minuspi.floor(0));
T(minuspi.ceil(0));

T(minuspi.floor(-2));
T(minuspi.ceil(-2));

T(minuspi.floor(30));
T(minuspi.ceil(30));

T(minuspi.floor(-30));
T(minuspi.ceil(-30));


T(ChartTickDecimal(123456789, 50).ceil(30));
