#
# Global definitions
#
!include ..\..\configuser.vc

#
# Targets
#
all: apis do-tictoc-tutorial do-manual do-userguide do-ide-customization-guide do-installguide  do-ide-developers-guide

apis: api nedxml-api parsim-api

api:
	$(DOXYGEN:/=\) api.doxyfile

nedxml-api:
	$(DOXYGEN:/=\) nedxml.doxyfile

parsim-api:
	$(DOXYGEN:/=\) parsim.doxyfile

# not generated by default
scave-engine:
	$(DOXYGEN:/=\) scave.doxyfile

do-manual:
	cd manual && $(MAKE)

do-userguide:
	cd userguide && $(MAKE)

do-installguide:
	cd installguide && $(MAKE)

do-ide-customization-guide:
	cd ide-customization-guide && $(MAKE)

do-ide-developers-guide:
	cd ide-developersguide && $(MAKE)

do-ide-overview:
	cd ide-overview && $(MAKE)

do-tictoc-tutorial:
	cd tictoc-tutorial && $(MAKE) -f Makefile.vc

do-queues-tutorial:
	cd queues-tutorial && $(MAKE) -f Makefile.vc

clean:
	del /s /q ..\api ..\nedxml-api ..\parsim-api ..\tictoc-tutorial ..\manual ..\userguide ..\installguide ..\ide-customization-guide ..\ide-overview ..\*.pdf >nul 2>nul
	cd manual && $(MAKE) -f Makefile.vc clean
	cd userguide && $(MAKE) -f Makefile.vc clean
	cd installationguide && $(MAKE) -f Makefile.vc clean
	cd ide-customization-guide && $(MAKE) -f Makefile.vc clean
	cd ide-developers-guide && $(MAKE) -f Makefile.vc clean
	cd ide-overview && $(MAKE) -f Makefile.vc clean
	cd tictoc-tutorial && $(MAKE) -f Makefile.vc clean

